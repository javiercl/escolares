<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- vista tipo form del modelo escolares.alumnos -->	
		<record model="ir.ui.view" id="alumnos_form">
		<field name="name">escolares.alumnos.form</field>
		<field name="model">escolares.alumnos</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
		<form>
            <sheet>
                <group string="Datos de alumnos">
                    <field name="name" placeholder="Número de control" />
                    <field name="nombre" placeholder="Nombre"/>
                    <field name="direccion" placeholder="Dirección"/>
                    <field name="telefono" placeholder="Teléfono"/>							<field name="email" placeholder="Correo electrónico"/>
                    <field name="sexo" placeholder="Sexo"/>
                    <field name="edad" placeholder="Edad"/>
                    <field name="inscrito" placeholder="Inscrito S/N" readonly="True"/>
					<field name="carrera_id" placeholder="Carrera"/>
                </group>
            </sheet>
		</form>
        </field>
		</record>

        <!-- vista tipo tree del modelo escolares.alumnos -->	
		<record model="ir.ui.view" id="escolares_alumnos_tree">
			<field name="name">escolares.alumnos.tree</field>
			<field name="model">escolares.alumnos</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Alumnos" >
						<field name="name" />
						<field name="nombre" />
						<field name="direccion"/>
						<field name="telefono" />
						<field name="sexo" />
						<field name="edad" />
						<field name="inscrito" />
						<field name="carrera_id" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="escolares_alumnos_search">
			<field name="name">escolares.alumno.search</field>
			<field name="model">escolares.alumnos</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
					<field name="nombre" />
					<field name="direccion"/>
					<field name="telefono" />
					<field name="sexo" />
					<field name="edad" />
					<field name="inscrito" />
					<field name="carrera_id" />
				</search>
			</field>
		</record>



		<!-- ACCION PARA EL MODELO escolares.alumnos -->	
		<record id="escolares_alumnos_action" model="ir.actions.act_window">
			<field name="name">Alumnos</field>
			<field name="res_model">escolares.alumnos</field>
			<field name="view_mode">tree,form</field>
		</record>


</odoo>