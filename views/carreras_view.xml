<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- vista tipo tree del modelo escolares.carreras -->	
		<record model="ir.ui.view" id="escolares_carreras_tree">
			<field name="name">escolares.carreras.tree</field>
			<field name="model">escolares.carreras</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Carreras" editable="top" >
						<field name="name" />
						<field name="nombre" />
				</tree>
			</field>
		</record>


		<record model="ir.ui.view" id="escolares_carreras_search">
			<field name="name">escolares.carreras.search</field>
			<field name="model">escolares.carreras</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
					<field name="nombre" />
				</search>
			</field>
		</record>

		<!-- ACCION PARA EL MODELO escolares.carreras -->	
		<record id="escolares_carreras_action" model="ir.actions.act_window">
			<field name="name">Carreras</field>
			<field name="res_model">escolares.carreras</field>
			<field name="view_mode">tree</field>
		</record>


</odoo>