<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- vista tipo form del modelo escolares.alumnos -->	
		<record model="ir.ui.view" id="horas_form">
		<field name="name">escolares.horas.form</field>
		<field name="model">escolares.horas</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
		<form>
            <sheet>
                <group string="horas">
                    <field name="name" />
                </group>
            </sheet>
		</form>
        </field>
		</record>

        <!-- vista tipo tree del modelo escolares.alumnos -->	
		<record model="ir.ui.view" id="escolares.horas_tree">
			<field name="name">escolares.horas.tree</field>
			<field name="model">escolares.horas</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<grid string="horas" >
					<field name="name" />
				</grid>
			</field>
		</record>

		<record model="ir.ui.view" id="escolares.horas_search">
			<field name="name">escolares.horas.search</field>
			<field name="model">escolares.horas</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
				</search>
			</field>
		</record>



		<!-- ACCION PARA EL MODELO escolares.alumnos -->	
		<record id="escolares_horas_action" model="ir.actions.act_window">
			<field name="name">horas</field>
			<field name="res_model">escolares.horas</field>
			<field name="view_mode">tree,form</field>
		</record>


</odoo>